.footer--top
	background-color: blue
	border-top 1px solid rgba(darkblue,0.2)
	border-bottom 1px solid rgba(darkblue,0.2)
	
.footer__social-list
	float left
	a
		display block
		float left
		size r(5.2rem)
		border-left 1px solid rgba(darkblue,0.2)
		color white
		position: relative
		border-bottom none
		transition background-color 0.2s ease
		&:hover
			border-bottom none
			background-color darkblue
			
		&:last-of-type
			border-right 1px solid rgba(darkblue,0.2)
		svg
			size r(3rem)
			align()

.footer__subnav
	float: left
	color white
	a, span
		display inline-block
		padding 0 r(1.2rem)
		border-bottom none
		color white
		fs(1.2rem)
		font-family proxLight
		&:hover
			border-bottom none
	a
		border-right r(0.1rem) solid white


+above(940px)
	.footer__social-list,
	.footer__subnav
		.container
			max-width 100%
			padding 0
	.footer__subnav
		padding-left r(1.2rem)
		.container
			align(vertical)

+below(940px)
	.footer--top
		border-bottom none
		background-color transparent
		> .container
			max-width 100%
			padding 0
	.footer__social-list,
	.footer__subnav
		float: none
		padding-left 0
	.footer__social-list
		background-color blue
	.footer__subnav
		// display none
		background-color white
		border-bottom 1px solid gray
		padding r(2rem) 0
		a, span
			color gray
		a
			&:hover
				color darkgray
			&:first-of-type
				padding-left 0
		span
			align(vertical)
			position: absolute
			right 0
			
+below(640px)
	.footer__social-list,
	.footer__subnav
		text-align center
	.footer__social-list
		a
			float none
			display inline-block
	.footer__subnav
		a
			fs(1.6rem)
		span
			display block
			padding r(2rem) 0 0 0
			position: static
			transform none
			

+below(540px)
	.footer__social-list
		.container
			padding 0
		a
			width 25%
	.footer__subnav
		a
			display block
			padding r(2rem) 0 0 0
			&:first-of-type
				padding-top 0

.footer--section
	padding-bottom r(6rem)