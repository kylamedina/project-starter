@import url('http://fonts.googleapis.com/css?family=Open+Sans:400,600,700');
body
	background #f5f5f5
	font-size 15px
	line-height 22px
	font-family 'Open Sans', sans-serif
	color #222

code
	display inline-block
	padding 2px 4px
	color #00728f
	background-color #f5f5f5
	border 1px solid #eaeaea
	font-size 12px
	border-radius 2px
	font-family Monaco, Menlo, Consolas, "Courier New", monospace

.generated
	font-size 11px
	color #999
	margin-bottom 2em

.container
	max-width 1200px
	margin 0 auto
	padding 20px 20px 20px 70px

h1, h2, h3, h4, h5
	font-size 1em
	line-height 1
	font-weight normal
	margin 0 0 .5em 0

.title-large
	font-size 2.5em
	font-weight 700
	margin 0 0 .2em 0

h2,
.title-medium
	font-size 1.4em
	font-weight 600
	text-transform uppercase

h3,
.title-small
	font-size 1.1em
	font-weight 600

hr
	display block
	height 1px
	border 0
	border-top 1px solid #c9c9c9
	margin 0
	padding 0
	clear both
	&.small
		margin 2em 0
		width 50px

.index
	ul
		margin 0 0 .5em 1.3em
		padding 0
		list-style square
	a
		color darkslateblue
		text-decoration none
		font-weight bold
		&:hover
			text-decoration underline

.nav
	position fixed
	left 0
	top 0
	height 100%
	width 400px
	overflow-y auto
	overflow-x hidden
	background #222
	border-right 1px solid #c9c9c9
	z-index 100
	-webkit-transform translateX(-350px)
	transform translateX(-350px)
	-webkit-transition all .3s ease
	-moz-transition all .3s ease
	transition all .3s ease
	&:hover
		-webkit-transform translateX(0px)
		transform translateX(0px)
		ul
			opacity 1
			li
				ul
					li
						opacity 1
						transition all 0.2s ease 0.1s
	ul
		padding 0
		list-style none
		margin 15px 0
		opacity .3
		li
			ul
				li
					color gray
					line-height 1.2
					padding 0px 30px 5px
					opacity 0.3
					transition 0.1s ease
	a
		padding 10px 20px 0
		color #fefefe
		text-decoration none
		display block
		white-space nowrap
		&:hover
			text-decoration underline

.markdown-container
	margin 40px 0
	h2
		margin-top 80px
		&:first-of-type
			margin-top 0
	
.section
	display none
	margin-top 75px
	&:target
		display block
	& > hr
		margin-top 75px
	&:last-of-type
		border none
		margin-bottom 0
		padding-bottom 0

.guide
	margin 30px 0
	h3
		&:before
			margin-right .3em
			display inline-block
			-webkit-border-radius 50%
			-moz-border-radius 50%
			-ms-border-radius 50%
			-o-border-radius 50%
			border-radius 50%
		a
			&.toggle
				float right
				font-size 10px
				color #ccc
				font-weight normal
				text-decoration none
				text-transform uppercase
	.description
		max-width 650px
		p
			margin 0 0 10px 0
	.hidden
		display none
	.preview
		iframe
			width 100%
			border none
			margin 0
	.source
		min-height 60px
		font-size 12px
		line-height 17px
		background-color #f7f7f9
		white-space pre
		overflow auto
		font-family Monaco, Menlo, Consolas, "Courier New", monospace

.guide .description ol,
.guide .description ul
	margin-top 0
	margin-bottom 10px

iframe
	body
		background #f5f5f5

.sourceJs,
.sourceCss
	display none

.hljs
	display block
	overflow-x auto
	padding 0.5em
	color #333
	background #f8f8f8

.hljs-comment,
.hljs-template_comment,
.diff .hljs-header,
.hljs-javadoc
	color #998
	font-style italic

.hljs-keyword,
.css .rule .hljs-keyword,
.hljs-winutils,
.javascript .hljs-title,
.nginx .hljs-title,
.hljs-subst,
.hljs-request,
.hljs-status
	color #333
	font-weight bold

.hljs-number,
.hljs-hexcolor,
.ruby .hljs-constant
	color #099

.hljs-string,
.hljs-tag .hljs-value,
.hljs-phpdoc,
.tex .hljs-formula
	color #d14

.hljs-title,
.hljs-id,
.coffeescript .hljs-params,
.scss .hljs-preprocessor
	color #900
	font-weight bold

.javascript .hljs-title,
.lisp .hljs-title,
.clojure .hljs-title,
.hljs-subst
	font-weight normal

.hljs-class .hljs-title,
.haskell .hljs-type,
.vhdl .hljs-literal,
.tex .hljs-command
	color #458
	font-weight bold

.hljs-tag,
.hljs-tag .hljs-title,
.hljs-rules .hljs-property,
.django .hljs-tag .hljs-keyword
	color #000080
	font-weight normal

.hljs-attribute,
.hljs-variable,
.lisp .hljs-body
	color #008080

.hljs-regexp
	color #009926

.hljs-symbol,
.ruby .hljs-symbol .hljs-string,
.lisp .hljs-keyword,
.tex .hljs-special,
.hljs-prompt
	color #990073

.hljs-built_in,
.lisp .hljs-title,
.clojure .hljs-built_in
	color #0086b3

.hljs-preprocessor,
.hljs-pragma,
.hljs-pi,
.hljs-doctype,
.hljs-shebang,
.hljs-cdata
	color #999
	font-weight bold

.hljs-deletion
	background #fdd

.hljs-addition
	background #dfd

.diff
	.hljs-change
		background #0086b3

.hljs-chunk
	color #aaa

